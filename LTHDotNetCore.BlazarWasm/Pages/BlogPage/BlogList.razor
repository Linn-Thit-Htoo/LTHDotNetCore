@page "/setup/blog"
@inject HttpClient HttpClient

<NavLink href="/setup/blog/create" class="btn btn-success">Create</NavLink>

@if (Model is not null)
{
    int count = 0;
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Action</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <th scope="row">@(++count + (Model.PageNo - 1) * Model.PageSize)</th>
                    <td>
                        <NavLink class="btn btn-warning" @onclick="() => Edit(item.Blog_Id)">Edit</NavLink>
                        <button @onclick="() => Delete(item.Blog_Id)" class="btn btn-danger">Delete</button>
                    </td>
                    <td>@item.Blog_Title</td>
                    <td>@item.Blog_Author</td>
                    <td>@item.Blog_Content</td>
                </tr>
            }
        </tbody>
    </table>
}