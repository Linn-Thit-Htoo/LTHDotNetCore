@model List<BlogDataModel>

@{
    ViewData["Title"] = "Blog List";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Blog_Title</td>
                <td>@item.Blog_Author</td>
                <td>@item.Blog_Content</td>
                <td>
                    <a href="/Blog/Edit/@item.Blog_Id" class="btn btn-success">Edit</a>
                    <a href="/Blog/Delete/@item.Blog_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
